<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/movie.css">
    <link rel="stylesheet" href="/stylesheets/loadScreen.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <script src="https://kit.fontawesome.com/d7de81155c.js" crossorigin="anonymous"></script>
    <script src="/javascripts/functions.js"></script>
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <title>
        <%= data.mName%>
    </title>
</head>

<div id="wrapper">
    <svg>
        <text x="50%" y="50%" dy=".35em" text-anchor="middle">
            PoggersFlix
        </text>
    </svg>
</div>

<body>

    <header>

        <nav>
            <h1><a href="/home">Poggers<contrast id="flix">Flix</contrast></a></h1>
            <div class="links">
                <a href="/home" class="pages">Início</a>
                <a href="/catalog?type=movies" class="pages">Filmes</a>
                <a href="/catalog?type=series" class="pages">Séries</a>
            </div>
            <div class="right">
                <div class="searchBar">
                    <form name="search" action="/catalog">

                        <input type=" text" class="input" name="query" onmouseout="this.value = ''; this.blur();">
                    </form>
                    <i class="fas fa-search"></i>
                </div>
                <div class="user">
                    <a href="/user/account">
                        <img src="https://gclabels.net/image/cache/data/new/inv/new/Blank-White-Square-Labels-s1w-600x600.png"
                            draggable=false>
                    </a>
                </div>
            </div>
        </nav>
        <nav id="menu">
            <h1><a>Poggers<contrast id="flix">Flix</contrast></a></h1>
            <button onclick="showNav()">
                <i class="fa-solid fa-bars"></i>
            </button>
            <div id="navContent" style="display: none;">
                <a href="/catalog?type=movies">Filmes</a>
                <a href="/catalog?type=series">Séries</a>

                <input type="text" id="searchBar">
            </div>
        </nav>
    </header>
    <main>
        <div id="background">
            <img src=<%=data.mBackground%> draggable=false>
        </div>
        <div class="mainContainer">
            <div class="movieInfoContainer">
                <div class="detailBar"></div>
                <div class="movieInfo">
                    <h1>
                        <%= data.mName%>
                    </h1>
                    <p id="movieClass">
                        <%= data.mType%>
                    </p>
                    <p id="movieSize">
                        <%= data.mDuration%>
                    </p>
                    <!-- <i class="fa-regular fa-star" id="star"></i>
                    <p id="adicionado"></p> -->
                    <p id="movieSinopse">
                        <%= data.mSinopse%>
                    </p>

                </div>
            </div>

            <div class="movieEpisodesContainer">


                <% data.mEpisodes.forEach((mEpisodes)=> { %>
                    <div class="movieEpisode">
                        <div class="movieEpisodesContent">
                            <a href=<%=mEpisodes.epURL%>>
                                <img src=<%=mEpisodes.epThumbnail%> draggable="false">
                            </a>
                            <p>
                                <%=mEpisodes.epName%>
                            </p>
                        </div>
                    </div>
                    <%})%>



            </div>
        </div>
    </main>
</body>

</html>